{
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": "./src/",
    "outDir": "./dist/",
    "composite": true,
    "declaration": true,
    "esModuleInterop": true,
    "importHelpers": true,
    "jsx": "react",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "allowJs": true,
    "paths": {
      "uniforms": ["node_modules/uniforms/src/"]
    },
    "strict": true
  },
  "include": [
    "src"
  ],
  "exclude": [
    // "node_modules",
    "dist",
    "example",
    "examples",
    "__tests__",
    "__mocks__"
  ]
}
